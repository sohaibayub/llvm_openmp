export SHELL = cmd

# TODO give an error if archs doesn't match
ifndef arch
    $(error Could not detect arch: please specify on command line.)
endif


CMD=cmd /C
CWD=$(shell cmd /C echo %CD%)
RM=cmd /C del /Q /F
RD=cmd /C rmdir
MD=cmd /c mkdir
SLASH=\\
NUL = nul

